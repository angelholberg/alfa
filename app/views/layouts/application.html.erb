<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
</head>
<body data-spy="scroll" data-target=".subnav" data-offset="50" data-twttr-rendered="true" >
	<%= render 'layouts/header' %>
	
	<header class="jumbotron subhead "> 
  		<div class="container"> 
			<div id="myCarousel" class="carousel slide"> 
				<div class='carousel-inner'>			
					<div class='item'> 							
						<p align="center"><%= image_tag("servicio1.jpg") %></p>
							<div class='carousel-caption'>										
								<p align="center"><%= image_tag("ecoServicios.jpg") %></p>
							</div>	
					</div> 
					<div class='item'> 
						<p align="center"><%= image_tag("servicio2.jpg") %></p>							
							<div class='carousel-caption'> 
								<p align="center"><%= image_tag("ecoServicios.jpg") %></p>
							</div> 
					</div> 
					<div class='active item'> 
						<p align="center"><%= image_tag("servicio3.jpg") %></p>							 
							<div class='carousel-caption'> 
							<p align="center"><%= image_tag("ecoServicios.jpg") %></p>
						</div> 
					</div> 
					<div class='item'> 
						<p align="center"><%= image_tag("servicio4.jpg") %></p>							 
							<div class='carousel-caption'> 
								<p align="center"><%= image_tag("ecoServicios.jpg") %></p>
							</div> 
					</div>						
					<div class='item'> 
						<p align="center"><%= image_tag("servicio5.jpg") %></p>							 
							<div class='carousel-caption'> 
								<p align="center"><%= image_tag("ecoServicios.jpg") %></p>
							</div> 
					</div> 
				</div> 
				<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a> 
				<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>					  				  						
  	 		</div>
		</div> 
	</header>
	
	<div class="container well">		
		<% if notice %>
		    <div class="alert alert-success">
		    	<button class="close" data-dismiss="alert"></button>
		        <%= notice %>
		    </div>
		<% end %>
		<% if alert %>
      		<div class="alert alert-error">
        		<button class="close" data-dismiss="alert"></button>
        		<%= alert %>
      		</div>
    	<% end %>
      	<%= yield %>		    	     			    			    	     		    
		<%= render 'layouts/footer' %>

	</div>
</body>
</html>